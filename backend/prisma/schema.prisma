// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      String   @default("USER")
  passwordHash String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings    Booking[]
  favorites   Favorite[]
  messages    Message[]
  savedSearches SavedSearch[]
}

model Boat {
  id          String   @id @default(cuid())
  name        String
  type        String   // yacht, speedboat, jetski, etc.
  description String?
  price       Float
  pricePerDay Float    @default(0)
  location    String
  neighborhood String?
  latitude    Float?
  longitude   Float?
  capacity    Int
  imageUrl    String?
  images      String?
  available   Boolean  @default(true)
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings    Booking[]
  favorites   Favorite[]
  messages    Message[]
}

model Booking {
  id        String   @id @default(cuid())
  userId    String
  boatId    String
  startDate DateTime
  endDate   DateTime
  status    String   @default("pending") // pending, confirmed, cancelled
  totalPrice Float
  currency   String   @default("COP")
  paymentProvider String? @default("none")
  paymentReference String?
  paymentStatus String   @default("pending") // pending, pending_payment, paid, failed, cancelled
  paymentCheckoutUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  boat Boat @relation(fields: [boatId], references: [id])
}

model Favorite {
  id     String @id @default(cuid())
  userId String
  boatId String

  user User @relation(fields: [userId], references: [id])
  boat Boat @relation(fields: [boatId], references: [id])

  @@unique([userId, boatId])
}

model Message {
  id        String   @id @default(cuid())
  senderId  String
  boatId    String
  content   String
  createdAt DateTime @default(now())

  sender User @relation(fields: [senderId], references: [id])
  boat   Boat @relation(fields: [boatId], references: [id])
}

model SavedSearch {
  id        String   @id @default(cuid())
  userId    String
  query     String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Otp {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@unique([email, code])
}